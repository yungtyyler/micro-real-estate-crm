generator client {
  provider = "prisma-client-js"
  output = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id        String      @id @default(cuid())
  name      String
  slug      String      @unique
  members   TeamMember[]
  leads     Lead[]
  createdAt DateTime    @default(now())
}

model User {
  id         String       @id @default(cuid())
  email      String       @unique
  name       String?
  memberOf   TeamMember[]
  createdAt  DateTime     @default(now())
}

model TeamMember {
  id       String   @id @default(cuid())
  user     User     @relation(fields: [userId], references: [id])
  userId   String
  team     Team     @relation(fields: [teamId], references: [id])
  teamId   String
  role     Role     @default(MEMBER)
  createdAt DateTime @default(now())
}

enum Role {
  OWNER
  ADMIN
  MEMBER
}

model Lead {
  id          String       @id @default(cuid())
  team        Team         @relation(fields: [teamId], references: [id])
  teamId      String
  firstName   String?
  lastName    String?
  email       String?
  phone       String?
  source      String?
  status      LeadStatus   @default(NEW)
  assigneeId  String?
  notes       String?
  activities  Activity[]
  reminders   Reminder[]
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

enum LeadStatus {
  NEW
  CONTACTED
  HOT
  COLD
  CLOSED
}

model Activity {
  id        String   @id @default(cuid())
  lead      Lead     @relation(fields: [leadId], references: [id])
  leadId    String
  userId    String?
  type      ActivityType
  message   String?
  createdAt DateTime @default(now())
}

enum ActivityType {
  NOTE
  STATUS_CHANGE
  CALL
  SMS
  EMAIL
}

model Reminder {
  id        String   @id @default(cuid())
  lead      Lead     @relation(fields: [leadId], references: [id])
  leadId    String
  remindAt  DateTime
  message   String?
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}
